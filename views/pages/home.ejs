// Clone first and last for seamless loop
const track = document.querySelector('.slider-track');
const slider = document.querySelector('.slider');
const prevBtn = document.querySelector('.prev');
const nextBtn = document.querySelector('.next');

let speed = 1; // pixels per frame
let pos = 0;
let isPaused = false;

const cardWidth = 280 + 20; // card width + margin
const trackHalf = track.scrollWidth / 2;

// Pause on hover
slider.addEventListener('mouseover', ()=> isPaused = true);
slider.addEventListener('mouseout', ()=> isPaused = false);

// Manual buttons
prevBtn.addEventListener('click', () => {
  pos += cardWidth;
  if(pos > 0) pos = -trackHalf + cardWidth;
  track.style.transform = `translateX(${pos}px)`;
});

nextBtn.addEventListener('click', () => {
  pos -= cardWidth;
  if(Math.abs(pos) >= trackHalf) pos = 0;
  track.style.transform = `translateX(${pos}px)`;
});

// Auto-scroll animation
function animate(){
  if(!isPaused){
    pos -= speed;
    if(Math.abs(pos) >= trackHalf) pos = 0;
    track.style.transform = `translateX(${pos}px)`;
  }
  requestAnimationFrame(animate);
}

animate();
/*navbar*/

const header = document.querySelector('header');
const menuToggle = document.querySelector('.menu-toggle');
const navUl = document.querySelector('nav ul');

let lastScroll = 0;

// Hide/show navbar on scroll
window.addEventListener('scroll', () => {
  const currentScroll = window.scrollY;

  if (currentScroll > lastScroll && currentScroll > 50) {
    header.classList.add('hide');
  } else {
    header.classList.remove('hide');
  }

  if (currentScroll > 50) {
    header.classList.add('scrolled');
  } else {
    header.classList.remove('scrolled');
  }

  lastScroll = currentScroll;
});

// Mobile menu toggle
menuToggle.addEventListener('click', () => {
  navUl.classList.toggle('show');
});
/* Card Slider */
// Slider Script

const slider1 = document.getElementById("cardSlider");

const countEl = document.getElementById("sliderCount");

let index = 0;

const cards = document.querySelectorAll(".card");

const total = cards.length;
 
function updateSlider() {

  slider1.style.transform = `translateX(${-index * 100}%)`;

  countEl.textContent = `${index + 1} / ${total}`;
 
  // Restart animation for visible info card

  cards.forEach((card, i) => {

    const content = card.querySelector('.card-content');

    if(content && card.classList.contains('info-card')){

      content.style.animation = 'none';

      void content.offsetWidth; // reflow

      if(i === index) content.style.animation = 'floatUp 1s forwards';

    }

  });

}
 
function nextCard() { index = (index + 1) % total; updateSlider(); }

function prevCard() { index = (index - 1 + total) % total; updateSlider(); }
 
// Auto Slide

function autoSlide() {

  const delay = index === 0 ? 6000 : 5000;

  setTimeout(() => { nextCard(); autoSlide(); }, delay);

}

autoSlide();
 
// Touch swipe support

let startX = 0, isDragging = false;

slider1.addEventListener('touchstart', e => {

  startX = e.touches[0].clientX;

  isDragging = true;

});

slider1.addEventListener('touchmove', e => {

  if(!isDragging) return;

  const diff = startX - e.touches[0].clientX;

  slider1.style.transform = `translateX(${-index * 100 - (diff / window.innerWidth) * 100}%)`;

});

slider1.addEventListener('touchend', e => {

  if(!isDragging) return;

  const diff = startX - e.changedTouches[0].clientX;

  if(diff > 50) nextCard();

  if(diff < -50) prevCard();

  isDragging = false;

  updateSlider();

});

 
</script>


